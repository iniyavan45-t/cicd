pipeline {
  agent any
  stages {
    stage('Pull Code') {
      steps {
        git branch: 'main', url: 'https://github.com/iniyavan45-t/cicd.git'
      }
    }
    stage('Deploy') {
      steps {
        sh '''
        sudo rm -rf /var/www/html/*
        sudo cp -r * /var/www/html/
        sudo systemctl restart nginx
        '''
      }
    }
  }
}
